<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sep6backendv1.mapper.MovieMapper">

    <resultMap type="com.example.sep6backendv1.entity.Movie" id="MovieResult">
        <id property="id" column="id" />
        <result property="year" column="year" />
        <result property="title" column="title" />
    </resultMap>

    <select id="getMovie" resultMap="MovieResult">
        select * from movies
    </select>

    <select id="selectMovie" resultType="com.example.sep6backendv1.entity.Movie">
        select * from movies where id = #{id}
    </select>

    <select id="selectMovieByName" resultType="com.example.sep6backendv1.entity.Movie">
        select * from movies where id = #{id}
    </select>

    <select id="selectMovieByYear"  resultMap="MovieResult">
        select * from movies where year &lt; #{maxYear} and year &gt; #{minYear}
    </select>

</mapper>
